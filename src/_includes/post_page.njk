{% extends "base_post.njk" %}

{% block content %}
  <div class="post-solo">
    <!-- buttons ABOVE the content box -->
    <div class="post-topbtns">
      <a class="backbtn" href="{{ '/blog/' | url }}">← return to blog</a>
      <a class="backbtn" href="{{ '/' | url }}">← home</a>
    </div>

    <main class="mainbox post-single">
      <h1 class="post-title">{{ title }}</h1>
      <p class="post-meta">{{ date | fmtDate }}</p>

      <div class="post-scroll">
        {{ content | safe }}
      </div>
    </main>
  </div>
{% endblock %}
