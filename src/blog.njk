---
layout: base.njk
title: 9712 — Blog
permalink: /blog/index.html
bodyClass: "no-window-scroll blog-top"
wrapMain: false
---

{% from "post.njk" import PostCard %}

<div class="layout-two">
  <aside class="navbox">
    <div class="title">blog</div>
    <p><a class="backbtn" href="{{ '/' | url }}">← go back</a></p>
  </aside>

  <main class="mainbox">
    <div class="title">posts</div>

    {% for p in collections.posts | reverse %}
      {% set sum = p.data.excerpt or (p.templateContent | striptags | truncate(240, true, '…')) %}
      {{ PostCard(p.data.title, p.date, sum, p.url) }}
    {% endfor %}
  </main>
</div>
